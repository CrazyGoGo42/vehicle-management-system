<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VehicleManager.Avalonia.AddVehicleWindow"
        Title="Neues Fahrzeug hinzufügen" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Neues Fahrzeug hinzufügen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Marke:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="MarkeTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Modell:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="ModellTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Baujahr:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="BaujahrTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Kaufpreis (€):" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Name="KaufpreisTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Leistung (PS):" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Name="LeistungTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Kilometerstand:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" Name="KilometerstandTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Kraftstoff:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1" Name="KraftstoffComboBox" Classes="ModernComboBox">
                    <ComboBoxItem Content="Benzin"/>
                    <ComboBoxItem Content="Diesel"/>
                    <ComboBoxItem Content="Elektro"/>
                    <ComboBoxItem Content="Hybrid"/>
                    <ComboBoxItem Content="Erdgas"/>
                </ComboBox>
                
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Getriebe:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="7" Grid.Column="1" Name="GetriebeComboBox" Classes="ModernComboBox">
                    <ComboBoxItem Content="Manuell"/>
                    <ComboBoxItem Content="Automatik"/>
                    <ComboBoxItem Content="Halbautomatik"/>
                </ComboBox>
                
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Farbe:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="1" Name="FarbeTextBox" Classes="ModernTextBox"/>
                
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Fahrzeugtyp:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="9" Grid.Column="1" Name="FahrzeugtypComboBox" Classes="ModernComboBox">
                    <ComboBoxItem Content="PKW"/>
                    <ComboBoxItem Content="SUV"/>
                    <ComboBoxItem Content="Kombi"/>
                    <ComboBoxItem Content="Limousine"/>
                    <ComboBoxItem Content="Sportwagen"/>
                </ComboBox>
                
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Zusatzausstattung:" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <TextBox Grid.Row="10" Grid.Column="1" Name="ZusatzausstattungTextBox" 
                         Classes="ModernTextBox" 
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="SaveButton" Content="Speichern" Classes="ModernButton" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Abbrechen" Classes="ModernButton" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>