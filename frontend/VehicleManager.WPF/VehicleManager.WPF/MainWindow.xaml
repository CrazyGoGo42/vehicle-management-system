<Window x:Class="VehicleManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fahrzeugverwaltung - WPF" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF0078D4">
            <TextBlock Text="Fahrzeugverwaltung" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="10"/>
        </Grid>
        
        <!-- Search and Controls -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Suchen:" VerticalAlignment="Center" FontSize="14" Margin="5"/>
            <TextBox Grid.Column="1" Name="SearchTextBox" Style="{StaticResource ModernTextBox}" KeyUp="SearchTextBox_KeyUp"/>
            <Button Grid.Column="2" Name="SearchButton" Content="Suchen" Style="{StaticResource ModernButton}" Click="SearchButton_Click"/>
            
            <Button Grid.Column="4" Name="AddButton" Content="+ Fahrzeug hinzufügen" Style="{StaticResource ModernButton}" Click="AddButton_Click"/>
            <Button Grid.Column="5" Name="EditButton" Content="Bearbeiten" Style="{StaticResource ModernButton}" Click="EditButton_Click" IsEnabled="False"/>
            <Button Grid.Column="6" Name="DeleteButton" Content="Löschen" Style="{StaticResource ModernButton}" Click="DeleteButton_Click" IsEnabled="False"/>
        </Grid>
        
        <!-- Main Data Grid -->
        <DataGrid Grid.Row="2" 
                  Name="VehiclesDataGrid" 
                  Style="{StaticResource ModernDataGrid}"
                  Margin="10"
                  SelectionChanged="VehiclesDataGrid_SelectionChanged"
                  ItemsSource="{Binding Vehicles}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Marke" Binding="{Binding Marke}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Modell" Binding="{Binding Modell}" Width="140" IsReadOnly="True"/>
                <DataGridTextColumn Header="Baujahr" Binding="{Binding Baujahr}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kaufpreis" Binding="{Binding Kaufpreis, StringFormat=C}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Leistung (PS)" Binding="{Binding Leistung}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kilometerstand" Binding="{Binding Kilometerstand, StringFormat=N0}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kraftstoff" Binding="{Binding Kraftstoff}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Getriebe" Binding="{Binding Getriebe}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Farbe" Binding="{Binding Farbe}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Aktueller Wert" Binding="{Binding AktuellerWert, StringFormat=C}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Status Bar -->
        <Grid Grid.Row="3" Background="#FFF0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Name="StatusTextBlock" 
                       Text="{Binding StatusMessage}" 
                       Margin="10,5" 
                       VerticalAlignment="Center" 
                       FontSize="12"/>
            
            <ProgressBar Grid.Column="1" 
                         Name="LoadingProgressBar" 
                         Width="100" 
                         Height="20" 
                         Margin="10,5"
                         IsIndeterminate="{Binding IsLoading}"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>